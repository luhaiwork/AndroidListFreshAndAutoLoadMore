<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/excption_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/exception_img_margTop" />

    <TextView
        android:id="@+id/msg_tv_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_space"
        android:gravity="center"
        android:text="@string/no_net_head"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/dark_gray"
        android:textSize="@dimen/big_textSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/msg_tv_small"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/middle_space"
        android:layout_marginRight="@dimen/middle_space"
        android:layout_marginTop="@dimen/small_space"
        android:gravity="center"
        android:text="@string/no_net_body"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/pop_gray_text"
        android:textSize="@dimen/normal_textSize" />

</LinearLayout>